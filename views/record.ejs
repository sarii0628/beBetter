<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Be Better</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="logo">
            <a href="/">
                <img src="/images/diet_running_woman.png" alt="">
                <p>Be Better</p>
            </a>    
        </div>
    </header>
    <div class="container">
        <p>コピペしてね</p>  
        <div class="copybox">
            <p>▶︎朝</p>
            <div class="time">
                <% morningItems.forEach((item) => { %>
                    <p><%= item.content %></p>
                <% }); %>
            </div>
            <p>▶︎昼</p>
            <div class="time">
                <% middayItems.forEach((item) => { %>
                    <p><%= item.content %></p>
                <% }); %>
            </div>
            <p>▶︎夕</p>
            <div class="time">
                <% eveItems.forEach((item) => { %>
                    <p><%= item.content %></p>
                <% }); %>
            </div>
        </div>
    </div>
</body>